{
  "name": "summarize-with-ai",
  "version": "1.0.7",
  "description": "A lightweight, embeddable widget to summarize web pages with AI services",
  "main": "dist/summarize-widget.iife.js",
  "module": "dist/summarize-widget.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/summarize-widget.esm.js",
      "require": "./dist/summarize-widget.iife.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "summarize",
    "chatgpt",
    "claude",
    "perplexity",
    "gemini",
    "grok",
    "widget",
    "web-component"
  ],
  "author": "raztronaut",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raztronaut/summarizewith.git"
  },
  "homepage": "https://github.com/raztronaut/summarizewith#readme",
  "bugs": {
    "url": "https://github.com/raztronaut/summarizewith/issues"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  }
}